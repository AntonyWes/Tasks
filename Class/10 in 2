#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Введите целое число: ";
    cin >> n;

    cout << "Двоичное представление: ";
    if (n == 0) {
        cout << "0";
    }
    else {
        while (n > 0) {
            cout << n % 2;
            n /= 2;
        }
    }

    return 0;
}
